<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.kanetah.planhv2.api.repository.UserRepository">

    <insert id="save">
        INSERT INTO user_tab (
            user_code, user_name, theme, access_by_token, access_token
        ) VALUE (
            #{userCode}, #{userName}, #{theme}, #{accessByToken}, #{accessToken}
        )
    </insert>

    <delete id="delete">
        DELETE FROM user_tab
        <where>
            id = #{id}
        </where>
    </delete>

    <update id="update">
        UPDATE user_tab
        <set>
            user_code = #{userCode},
            user_name = #{userName},
            theme = #{theme},
            access_by_token = #{accessByToken},
            access_token = #{accessToken}
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <sql id="select_user">
        SELECT *
        FROM user_tab
    </sql>
    <select id="findByCode" resultType="top.kanetah.planhv2.api.entity.User">
        <include refid="select_user"/>
        <where>
            user_code = #{code}
        </where>
    </select>

</mapper>
